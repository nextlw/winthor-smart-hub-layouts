{
	"tabela": {
		"nome": "PCINTEGRACAOROTASERVICO",
		"campos": [
			{
				"nome": "SOMENTEATUALIZARINTEGRACAOCORE",
				"valor": "N"
			},
			{
				"nome": "ID",
				"valor": "PDVSYNC - Consultar status lote"
			},
			{
				"nome": "IDEMPRESAAPI",
				"valor": "PDVSYNC"
			},
			{
				"nome": "SERVICO",
				"valor": "PDVSYNC - Consultar status lote"
			},
			{
				"nome": "LAYOUTCOMUNICACAO",
				"valor": {
					"name": "PDVSYNC - Consultar status lote",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{TOKEN}}"
							},
							{
								"key": "Accept",
								"value": "*/*"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{BASE_URL_STATUS_LOTE}}",
							"query": [
								{
									"key": "inquilino",
									"value": "{{ID_INQUILINO}}"
								},
								{
									"key": "loteOrigem",
									"value": "{{NUMERO_LOTE}}"
								}
							]
						}
					},
					"response": []
				}
			},
			{
				"nome": "LAYOUTTRANSFORMACAO",
				"valor": [
				  {
					"operation": "shift",
					"spec": {
					  "data": {
						"loteOrigem": ["items[0].numeroLote", "items[0].idExterno"],
						"lojaLotes": {
						  "*": {
							"status": {
							  "2": { "#11": "items[0].filiais[&3].status" },
							  "2.0": { "#11": "items[0].filiais[&3].status" },
							  "4": { "#11": "items[0].filiais[&3].status" },
							  "4.0": { "#11": "items[0].filiais[&3].status" },
							  "5": { "#12": "items[0].filiais[&3].status" },
							  "5.0": { "#12": "items[0].filiais[&3].status" },
							  "6": { "#13": "items[0].filiais[&3].status" },
							  "6.0": { "#13": "items[0].filiais[&3].status" },
							  "*": {
								"#99": "items[0].filiais[&3].status"
							  }
							},
							"idRetaguardaLoja": "items[0].filiais[&1].codigoFilial",
							"errosIdentificados": {
							  "*": {
								"idRetaguarda": "items[0].filiais[&3].erros[&1].idInterno",
								"erro": "items[0].filiais[&3].erros[&1].erro"
							  }
							}
						  }
						}
					  }
					}
				  },
				  {
					"operation": "modify-overwrite-beta",
					"spec": {
					  "items": {
						"*": {
						  "idExterno": "=concat('pdvsync-post-status-lote-', @(1,idExterno))"
						}
					  }
					}
				  },
				  {
					"operation": "shift",
					"spec": {
					  "items": {
						"*": {
						  "numeroLote": "items[&1].numeroLote",
						  "idExterno": "idExterno",
						  "filiais": "items[&1].filiais"
						}
					  }
					}
				  },
				  {
					"operation": "modify-overwrite-beta",
					"spec": {
					  "items": {
						"*": {
						  "filiais": {
							"*": {
							  "status": ["=toInteger", 0]
							}
						  }
						}
					  }
					}
				  },
				  {
					"operation": "default",
					"spec": {
					  "_attr_access": "items"
					}
				  }
				]
			},
			{
				"nome": "ATIVO",
				"valor": "S"
			},
			{
				"nome": "AUTENTICADOR",
				"valor": "N"
			},
			{
				"nome": "DATASINCRONISMO",
				"valor": "17-MAR-23"
			},
			{
				"nome": "REFRESHTOKEN",
				"valor": ""
			}
		]
	}
}